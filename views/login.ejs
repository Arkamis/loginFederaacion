<!DOCTYPE html>
<html lang="es">
<head>
  <% include ./partials/head %>
  <title>NotiBuilder</title>
</head>
<style>
  body, html{
    background: #30E8BF;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #FF8235, #30E8BF);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #FF8235, #30E8BF); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    height:100%;
  }
  img {
    max-width:50%;
  }
  .formulario {
    width: 350px;
    max-width: 500px;
    background-color: #E8E8E8;
  }
  .img-logo{
    position: relative;
    top: -50px;
  }
  .input-group-text{
    background-color: #954811 ;
  }
  .input-group-prepend i{
    color: #ffffff;
  }
  .btn-login{
    background-color: #954811;
    color: #fff;
  }
  .btn-login:hover{
    background-color: #954811;
    color: #fff;
  }
</style>
<body>
  <div class="container h-100">
    <div class="d-flex h-100 justify-content-center">
      <div class="d-flex shadow rounded flex-column formulario mt-auto mb-auto flex-wrap">
        <div class="d-flex align-items-center flex-column mb-3">
          <img class="shadow align-self-center bg-light rounded shadow img-logo" src="/img/notiBuilder/logo.png">
          <small class="text-muted">Noticias Rapidas.</small>
        </div>
        <form class="m-2 mw-100" action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Correo electronico:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <input type="email" class="form-control" id="email" name="email" placeholder="Correo electronico" required>
            </div>
          </div>
          <div class="form-group">
            <label for="password">Contrasena:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
                </div>
                <input type="password" class="form-control" name="password" id="passowrd" placeholder="Contrasena" required>
            </div>
          </div>
          <div class="d-flex flex-column my-4 flex-wrap">
            <button type="submit" class="btn btn-login align-self-center">Ingresar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% include ./partials/scripts%>
</body>
</html>